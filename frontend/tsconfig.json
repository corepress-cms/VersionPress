{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "es2020",
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "experimentalDecorators": true,
    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "typeRoots" : ["./node_modules/@types/"],
    // TODO: Move to native ESM
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/__tests__/*.ts"
  ]
}
